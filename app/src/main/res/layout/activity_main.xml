<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/but_lay"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="56sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#F0F3F6"
        android:id="@+id/but_lay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_clear"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#EF0606"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="clearOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_par"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#673AB7"
                android:onClick="parOnClick"
                android:text="( )"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_pow"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#673AB7"
                android:text="^"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="powOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_bksp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#EF0606"
                android:text="B"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="backspaceOnClick"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_1"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                android:onClick="oneOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_2"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                android:onClick="twoOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_3"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                android:onClick="threeOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_div"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#673AB7"
                android:onClick="divOnClick"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_4"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                android:onClick="fourOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_5"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                android:onClick="fiveOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_6"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                android:onClick="sixOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_mul"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#673AB7"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="mulOnClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_7"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                android:onClick="sevenOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_8"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                android:onClick="eightOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_9"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                android:onClick="nineOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_sub"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#673AB7"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="subOnClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_dot"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#673AB7"
                android:text="."
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="dotOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_0"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                android:onClick="zeroOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_equ"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="38dp"
                app:cornerRadius="38dp"
                android:backgroundTint="#FF5722"
                android:onClick="equalOnClick"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_add"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#673AB7"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp"
                android:onClick="addOnClick"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>